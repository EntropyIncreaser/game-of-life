<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<GridPane alignment="CENTER" hgap="10" vgap="10"
          xmlns:fx="http://javafx.com/fxml/1"
          xmlns="http://javafx.com/javafx/8.0.76-ea"
          fx:controller="com.huiming.gameoflife.WelcomeController">
	<Text style="-fx-font-size: 25" text="Welcome to Game of Life" GridPane.columnIndex="0" GridPane.rowIndex="0"/>

	<HBox alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="1">
		<Button fx:id="newLifeButton" text="Create a New Space"/>
	</HBox>

	<HBox alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="2">
	<Button fx:id="openLifeButton" text="Open a Space"/>
	</HBox>
	<padding>
		<Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
	</padding>
</GridPane>
