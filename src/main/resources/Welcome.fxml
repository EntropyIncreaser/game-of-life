<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<GridPane alignment="CENTER" hgap="10" vgap="10"
		  fx:controller="com.huiming.gameoflife.WelcomeController" xmlns:fx="http://javafx.com/fxml">
	<Text text="Welcome to Game of Life"
	      GridPane.rowIndex="0"
	      GridPane.columnIndex="0"/>

	<HBox GridPane.rowIndex="0"
	      GridPane.columnIndex="1">
		<JFXButton fx:id="newLifeButton"
				   text="Create a New Space" styleClass="button-raised"/>
	</HBox>

	<HBox GridPane.rowIndex="0"
	      GridPane.columnIndex="2">
	<JFXButton fx:id="openLifeButton"
			text="Open a Space" styleClass="button-raised"/>
	</HBox>

	<JFXComboBox GridPane.columnIndex="3" GridPane.rowIndex="1" fx:id="comboBox" />
	<Label text="Select a language:" GridPane.columnIndex="3" GridPane.rowIndex="0" />
</GridPane>
