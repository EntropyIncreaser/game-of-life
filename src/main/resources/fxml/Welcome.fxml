<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Label?>

<fx:root type="javafx.scene.layout.GridPane"
         alignment="CENTER" hgap="10" vgap="10"
         xmlns:fx="http://javafx.com/fxml">
	<Text style="-fx-font-size: 25" text="Welcome to Game of Life" GridPane.columnIndex="0" GridPane.rowIndex="0"/>

	<HBox alignment="CENTER" GridPane.rowIndex="0"
	      GridPane.columnIndex="1">
		<JFXButton fx:id="newLifeButton"
				   text="Create a New Space" styleClass="button-raised"/>
	</HBox>

	<HBox alignment="CENTER" GridPane.rowIndex="0"
	      GridPane.columnIndex="2">
	<JFXButton fx:id="openLifeButton"
			text="Open a Space" styleClass="button-raised"/>
	</HBox>
	<JFXComboBox GridPane.columnIndex="3" GridPane.rowIndex="1" fx:id="comboBox" />
	<Label text="Select a language:" GridPane.columnIndex="3" GridPane.rowIndex="0" />
	<padding>
		<Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
	</padding>
</fx:root>
